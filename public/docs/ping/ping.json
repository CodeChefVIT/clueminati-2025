{
  "openapi": "3.0.0",
  "paths": {
    "/api/ping": {
      "get": {
        "summary": "Check API status",
        "description": "Returns a simple 'pong' message to indicate that the API is up and running.",
        "tags": [
            "pong"
        ],
        "operationId": "checkConnection",
        "responses": {
          "200": {
            "description": "API is online",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "pong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}